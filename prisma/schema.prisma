generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id        String     @id @default(uuid())
  title     String
  completed Boolean @default(false)
  user   User @relation(fields: [userId], references: [id])
  userId String 


  @@map("tasks")
  
}

model User {
  id        String     @id @default(uuid())
  name     String
  email     String @unique
  password String
  tasks Task[]


  @@map("users")
  
}
